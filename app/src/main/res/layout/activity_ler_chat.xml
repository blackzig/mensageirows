<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.edu.ifspsaocarlos.sdm.mensageirows.view.LerChatActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <EditText
                android:id="@+id/et_digite_o_primeiro_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Digite o ID de um usuário" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <EditText
                android:id="@+id/et_digite_o_segundo_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Digite o ID de um usuário" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_digite_o_id_da_mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="ID da mensagem" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_procurar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Procurar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_chat_entre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="Mensagens entre..."
            android:textColor="@color/yellow"
            android:textSize="14dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_lista_do_chat_entre_remetente_e_destinatario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>
